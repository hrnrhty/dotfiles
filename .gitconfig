#=============================================================================
[core]
	autocrlf = false
	editor = "vim -c 'set fileencoding=utf-8'"
	excludesfile = ~/.gitignore
[merge]
	tool = vimdiff
[mergetool]
	trustExitCode = false
[color]
	ui = auto
[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --oneline --decorate
